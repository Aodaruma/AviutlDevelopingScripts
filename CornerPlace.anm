elseif t == 4 then
    cx, cy = -w / 2, 0
    ox, oy = cx, cy
elseif t == 5 then
    cx, cy = 0, 0
    ox, oy = cx, cy
elseif t == 6 then
    cx, cy = w / 2, 0
