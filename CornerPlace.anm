elseif t == 18 then
    cx, cy = sw / 2, sh / 2
    ox, oy = cx, cy
end
if obj.track1 == 0 then
    obj.cx, obj.cy = obj.cx + cx, obj.cy + cy
    if obj.check0 then
        obj.ox, obj.oy = obj.ox + ox, obj.oy + oy
    end
else
    obj.cx, obj.cy = cx, cy
    if obj.check0 then
        obj.ox, obj.oy = ox, oy
    else
        obj.ox, obj.oy = 0, 0
    end
end
