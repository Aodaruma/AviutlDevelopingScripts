local t = obj.track0
local w, h = obj.w, obj.h
local sw, sh = obj.screen_w, obj.screen_h

local cx, cy, ox, oy = 0, 0, 0, 0
if t == 1 then
    cx, cy = -w / 2, -h / 2
    ox, oy = cx, cy
elseif t == 2 then
    cx, cy = 0, -h / 2
    ox, oy = cx, cy
elseif t == 3 then
    cx, cy = w / 2, -h / 2
